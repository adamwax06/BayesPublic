# Bayes Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Gemini AI API Key (Required)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Supabase Configuration (Required)
# Get from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Stripe Configuration (Required for payments)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Mathpix OCR API (Optional - for handwriting recognition)
# Get from: https://mathpix.com/
MATHPIX_APP_ID=your_mathpix_app_id_here
MATHPIX_APP_KEY=your_mathpix_app_key_here

# GitHub API Token (Optional - for bug reporting)
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_personal_access_token_here

# Resend Email API (Optional - for welcome emails)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# Server Configuration
FASTAPI_HOST=127.0.0.1
FASTAPI_PORT=8000

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# CORS Configuration
ADDITIONAL_CORS_ORIGINS=
DEVELOPMENT_MODE=true
